<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">wolfsellers_referredusers_referrals_grid.wolfsellers_referredusers_referrals_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Route</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="WolfSellers\ReferredUsers\Block\Adminhtml\Referrals\Edit\SaveAndContinueButton"/>
            <button name="save" class="WolfSellers\ReferredUsers\Block\Adminhtml\Referrals\Edit\SaveButton"/>
            <button name="reset" class="WolfSellers\ReferredUsers\Block\Adminhtml\Referrals\Edit\ResetButton"/>
            <button name="delete" class="WolfSellers\ReferredUsers\Block\Adminhtml\Referrals\Edit\DeleteButton"/>
            <button name="back" class="WolfSellers\ReferredUsers\Block\Adminhtml\Referrals\Edit\BackButton"/>
        </buttons>
        <namespace>wolfsellers_referredusers_referrals_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>wolfsellers_referredusers_referrals_form.wolfsellers_referredusers_referrals_data_source</dep>
        </deps>
    </settings>
    <dataSource name="wolfsellers_referredusers_referrals_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="WolfSellers\ReferredUsers\Model\Referrals\FormDataSource" name="wolfsellers_referredusers_referrals_form_data_source">
            <settings>
                <requestFieldName>entity_id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Position</label>
        </settings>
        <field name="first_name" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">First Name</label>
                <dataScope>first_name</dataScope>
            </settings>
        </field>
        <field name="last_name" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Last Name</label>
                <dataScope>last_name</dataScope>
            </settings>
        </field>
        <field name="email" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Email</label>
                <dataScope>email</dataScope>
            </settings>
        </field>
        <field name="phone" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Phone</label>
                <dataScope>phone</dataScope>
            </settings>
        </field>
        <field name="status" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Status</label>
                <dataScope>status</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
