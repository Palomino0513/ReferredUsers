<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="referral" resource="default" engine="innodb" comment="Referral Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <column xsi:type="varchar" name="first_name" nullable="false" length="255" comment="First Name"/>
        <column xsi:type="varchar" name="last_name" nullable="false" length="255" comment="Last Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
        <column xsi:type="varchar" name="phone" nullable="true" length="255" comment="Phone"/>
        <column xsi:type="varchar" name="status" nullable="false" length="50" default="pendiente" comment="Status"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <constraint xsi:type="foreign" referenceId="REFERRAL_CUSTOMER_ID_FK" table="referral" column="customer_id" referenceTable="customer_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <index referenceId="REFERRAL_EMAIL_UNIQUE_IDX">
            <column name="email"/>
        </index>
    </table>
</schema>
